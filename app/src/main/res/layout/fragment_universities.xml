<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.UniversitiesFragment">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/MainImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:repeatCount="infinite"
        android:repeatMode="restart"
        android:src="@drawable/main_animation_image"
        android:tint="@color/Black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/questv_regular"
        android:text="@string/app_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/Black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainImage" />

    <ScrollView
        android:id="@+id/HomeScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/questv_regular"
                android:text="@string/CentralRegion"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:id="@+id/CentreScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/SaudiElectronicUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/saudi_electronic_university" />

                        <Button
                            android:id="@+id/SaudHealthUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/saud_health_university" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/ShaqraUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/shaqra_university" />

                        <Button
                            android:id="@+id/MajmaahUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/majmaah_university" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/QassimUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/qassim_university" />

                        <Button
                            android:id="@+id/HailUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/hail_university" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/NoraUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/nora_university" />

                        <Button
                            android:id="@+id/ImamUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/imam_university" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/SaudUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/suad_university" />

                        <Button
                            android:id="@+id/SattamUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/sattam_university" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/questv_regular"
                android:text="@string/WestRegion"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:id="@+id/WestScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/TaibahUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/taibah_university" />

                        <Button
                            android:id="@+id/IslamicUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/islamic_university" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/AlQuraUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/alqura_university" />

                        <Button
                            android:id="@+id/TaifUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/taif_university" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/JeddahUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/jeddah_university" />

                        <Button
                            android:id="@+id/AbdulazizUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/abdulaziz_university" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/questv_regular"
                android:text="@string/EastRegion"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:id="@+id/EastScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/ImamAbdulrahmanUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/imam_abdulrahman_university" />

                        <Button
                            android:id="@+id/HafrBatinUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/hafr_batin_university" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/FahdUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/fahd_university" />

                        <Button
                            android:id="@+id/FaisalUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/faisal_university" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/questv_regular"
                android:text="@string/NorthRegion"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:id="@+id/NorthScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/NorthernBordersUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/northern_borders_university" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/JoufUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/jouf_university" />

                        <Button
                            android:id="@+id/TabukUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/tabuk_university" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/questv_regular"
                android:text="@string/SouthRegion"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:id="@+id/SouthScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/BishaUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/bisha_university" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/KhalidUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/khalid_university" />

                        <Button
                            android:id="@+id/JazanUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/jazan_university" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/AlbahaUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/albaha_university" />

                        <Button
                            android:id="@+id/NajranUniversity"
                            style="@style/UniversityButton"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/universities_button_design"
                            android:text="@string/najran_university" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>