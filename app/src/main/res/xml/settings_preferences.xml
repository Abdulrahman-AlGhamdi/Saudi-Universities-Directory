<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:icon="@drawable/icon_app_settings"
        android:title="@string/preference_application_configuration">

        <SwitchPreferenceCompat
            android:key="@string/preference_dark_mode_key"
            android:summaryOff="@string/preference_dark_mode_summary_off"
            android:summaryOn="@string/preference_dark_mode_summary_on"
            android:title="@string/preference_dark_mode_title" />

        <SwitchPreferenceCompat
            android:key="@string/preference_language_key"
            android:summaryOff="@string/preference_language_summary_off"
            android:summaryOn="@string/preference_language_summary_on"
            android:title="@string/preference_language_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:icon="@drawable/icon_about"
        android:title="@string/preference_about">

        <Preference
            android:key="@string/preference_contact_me_key"
            android:summary="@string/preference_contact_me_summary"
            android:title="@string/preference_contact_me_title" />

        <Preference
            android:key="@string/preference_version_key"
            android:title="@string/preference_version_title" />

    </PreferenceCategory>

</PreferenceScreen>