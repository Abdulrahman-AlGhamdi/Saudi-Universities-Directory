<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/universitiesFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ss.universitiesdirectory.ui.splash.SplashFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_universitiesFragment"
            app:destination="@id/universitiesFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/universitiesFragment"
        android:name="com.ss.universitiesdirectory.ui.universities.UniversitiesFragment"
        android:label="@string/fragment_universities"
        tools:layout="@layout/fragment_universities">
        <action
            android:id="@+id/action_universitiesFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_universitiesFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.ss.universitiesdirectory.ui.details.DetailsFragment"
        android:label="@string/fragment_details"
        tools:layout="@layout/fragment_details">
        <action
            android:id="@+id/action_detailsFragment_to_websiteFragment"
            app:destination="@id/websiteFragment" />
        <action
            android:id="@+id/action_detailsFragment_to_newsFragment"
            app:destination="@id/newsFragment" />
        <argument
            android:name="university"
            app:argType="com.ss.universitiesdirectory.model.UniversityModelItem" />
    </fragment>

    <fragment
        android:id="@+id/websiteFragment"
        android:name="com.ss.universitiesdirectory.ui.website.WebsiteFragment"
        android:label="@string/fragment_website"
        tools:layout="@layout/fragment_website">
        <argument
            android:name="url"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.ss.universitiesdirectory.ui.news.NewsFragment"
        android:label="@string/fragment_news"
        tools:layout="@layout/fragment_news">
        <argument
            android:name="rssUrl"
            app:argType="string" />
        <action
            android:id="@+id/action_newsFragment_to_websiteFragment"
            app:destination="@id/websiteFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.ss.universitiesdirectory.ui.settings.SettingsFragment"
        android:label="@string/fragment_settings" />

</navigation>